<!DOCTYPE html>
<html>
    <head>
	<title>Altalanos szamitas</title>
    </head>
    <body>
	<style>
	#lada {
			width: 1000px;
			height: 200px;
			background: green;
			position: relative;
		}

	#doboz {
			width: 50px;
			height: 50px;
			background: red;
			position: absolute;
		}
</style>
	<div id="lada">
		<div id="doboz">
		</div>
	</div>
	<script>
	onclick = function()
	{
		var posx = 0;
		var box = document.getElementById('doboz');
		var i = 4;
		var tx = setInterval(moveleft, i);
function moveleft()
		{
			if(posx >= 950)
			{
			tx = setInterval(moveright, i);
			}
				else {
						posx += 1;
						box.style.left = posx + 'px';
					}
		}
function moveright()
		{
			if(posx <= 0)
			{
			clearInterval(tx);
			i -= 1;
			}
				else {
						posx -= 1;
						box.style.right = posx - 'px';
					}
		}
	};

	</script>
	</body>
	
</html>
